{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
      "semi": ["error", "never"],
      "indent": ["warn", 2],
      "quotes": ["warn", "single", { "avoidEscape": true }]
    }
}
